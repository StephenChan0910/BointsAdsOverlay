<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <ImageView
        android:id="@+id/iv_overlay_bg"
        android:layout_width="225dp"
        android:layout_height="225dp"
        android:translationX="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <ImageButton
        android:id="@+id/ib_ava_ads"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="177dp"
        android:layout_marginTop="15dp"
        android:alpha="0.8"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/iv_overlay_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_overlay_bg"
        app:srcCompat="@drawable/available"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />

    <ImageButton
        android:id="@+id/ib_move"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="45dp"
        android:alpha="0.8"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/iv_overlay_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_overlay_bg"
        app:srcCompat="@drawable/move"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/ib_ads"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="92dp"
        android:alpha="0.8"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="@+id/iv_overlay_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_overlay_bg"
        app:srcCompat="@drawable/ads"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/ib_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="137dp"
        android:layout_marginBottom="45dp"
        android:alpha="0.8"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/iv_overlay_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_overlay_bg"
        app:srcCompat="@drawable/settings"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/ib_exit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="177dp"
        android:layout_marginBottom="15dp"
        android:alpha="0.8"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/iv_overlay_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_overlay_bg"
        app:srcCompat="@drawable/exit"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="177dp"
        android:layout_marginBottom="92dp"
        android:alpha="0.8"
        android:background="@null"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/iv_overlay_bg"
        app:layout_constraintStart_toStartOf="@+id/iv_overlay_bg"
        app:srcCompat="@drawable/close"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>